{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"]
        },
        "lib": ["esnext", "dom"],
        "types": ["node", "vite/client"],
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [
        "./**/*",
        ".eslintrc.js",
        "**/*/*.json",
        "package.json",
    ]
}
